  <body>
<h2 style="color: rgb(60,255,0);margin-top: 2%">User's Playlist</h2>
<div class="container-fluid">
  <div class="row">
    <% var song = " "
      var Play = " " %>
    <% for(var i=0;i<15;i++) { %>
    <% song = "myAudio" + (i+1)
       Play = "togglePlay"+"(" +(i+1)+ ")" %>
    <div class="col-sm-3 frame" >
      <audio id="<%=song%>"><source src="<%= tracks_audio[i] %>" />  </audio>
          <img src="<%=tracks_image[i]%>" onClick="<%=Play%>" />
          <h5 class="text"><%= tracks_name[i] %></h5>

    </div>
    <% } %>
