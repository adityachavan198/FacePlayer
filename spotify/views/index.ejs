    <style media="screen">
    body{
      margin:0;
      padding:0;
      background-color: black;
    }
      h2{
        text-align: center;
      }
      .frame{
        color:rgb(60,255,0);
        text-align: center;
        margin-top: 2%;
        margin-bottom: 1%;

      }
      img{

     border: 4px solid rgb(60,255,0);
   }

      .text{
        margin-top: 5%;
      }

    </style>
